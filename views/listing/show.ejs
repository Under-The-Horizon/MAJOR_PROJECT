<% layout("./layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3><%= details.title %></h3>
            </div>
                <div class="card col-6 offset-3 show-card">
                    <img src="<%= details.Image %>" alt="listing_image" class="card-img-top show-img">
                    <div class="card-body">
                        <p class="card-text">
                           
                            <%= details.description %> <br>
                            &#8377 <%= details.price.toLocaleString("en-IN") %> <br>
                            <%= details.location %> <br>
                            <%= details.country %>
                            
                        </p>
                    </div>
                </div>
                <div class="btns mb-4">
                    <a href="/listing/<%= details._id%>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
                    <form method="post" action="/listing/<%= details._id %>?_method=DELETE">
                        <button class="btn btn-dark add-btn offset-5">Delete</button>
                    </form>
                </div>
                
        </div>
        <hr>
        <div class="col-8 offset-3">
            <h4>Leave a review</h4>
            <form action="/listing/<%= details.id %>/review" method="post" novalidate class="needs-validation">
                <div>
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="10", id="rating", name="review[rating]" class="form-range">
                </div>
                <div>
                    <label for="comment">Comments</label>
                    <textarea name="review[comments]" id="comment" cols="30" rows="10" class="form-control" required  ></textarea>
                    <div class="invalid-feedback">Please enter some comment</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            
        </div>
    </body>