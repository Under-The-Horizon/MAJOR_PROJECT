<% layout("./layouts/boilerplate") %>

    <body>
        <div class="row row-cols-xxl-3 row-cols-xl-3 row-cols-lg-3 row-cols-md-2  row-cols-sm-1 row-cols-xs-1">
            <% for(let listing of allListing){%>
                <a href="/listing/<%= listing._id %>">
                    <div class="card col">
                        <img src="<%= listing.Image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.title%>
                                </b> <br>
                                &#8377 <%=listing.price.toLocaleString("en-IN") %>/night
                            </p>
                        </div>
                    </div>  
                </a>
                <% } %>
        </div>
    </body>