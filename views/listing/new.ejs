<% layout("./layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create new listing</h3>
        <form method="post" action="/listing" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" placeholder="Enter title" name="entry[title]" class="form-control" required>
                <div class="invalid-feedback">Invalid name</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" placeholder="Enter description" name="entry[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" placeholder="Enter price" name="entry[price]" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" placeholder="Enter country" name="entry[country]" class="form-control" required>
                    <div class="invalid-feedback">please enter the country name</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" placeholder="Enter location" name="entry[location]" class="form-control" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" placeholder="Enter image URL" name="entry[image]" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid URL</div>
            </div>
            <button class="btn btn-dark add-btn">Submit</button>
            <br><br>
        </form>
        </div>
    </div>
</body>
