<% layout("./layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your listing</h3>
    <form method="post" action="/listing/<%=details._id%>?_method=PUT">
        <div class="mb-3"> 
            <label for="title">Title</label>
            <input type="text" value="<%=details.title%>" name="entry[title]" class="form-control">
        </div>
        <div class="mb-3"> 
            <label for="description">Description</label>
            <textarea type="text"  name="entry[description]" class="form-control"><%=details.description%></textarea>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <div class="mb-3"> 
                    <label for="country">Country</label>
                    <input type="text" value="<%=details.country%>" name="entry[country]" class="form-control">
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <div class="mb-3"> 
                    <label for="price">Price</label>
                    <input type="number" value="<%=details.price%>" name="entry[price]" class="form-control">
                </div>
            </div>
        </div>
        <div class="mb-3"> 
            <label for="location">Location</label>
            <input type="text" value="<%=details.location%>" name="entry[location]" class="form-control">
        </div>  
        <div class="mb-3"> 
            <label for="image">Image URL</label>
            <input type="text" value="<%=details.Image%>" name="entry[image]" class="form-control">
        </div>
        <button class="btn btn-dark add-btn mt-3">Submit</button>
        <br><br>
    </form>
        </div>
    </div>
</body>